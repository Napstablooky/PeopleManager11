@model IList<Person>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<div class="text-center mb-3">
    <h2 class="display-4">Employee of the Week!</h2>
    @if (Model.Any())
    {
        var firstPerson = Model.First();
        <div class="mb-3">
                <partial name="PersonCardPartial" model="firstPerson" />
        </div>
    }
</div>

<div class="text-center mb-3">
    <h2 class="display-4">Employees</h2>
    <div class="row">
        @foreach (var person in Model)
        {
            <div class="col-4 mb-3">
                <partial name="PersonCardPartial" model="person"/>
            </div>
        }
    </div>
</div>